{
  "name": "magitrickle",
  "description": "MagiTrickle WebUI",
  "license": "GPL-3.0-only",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "lock": false,
  "scripts": {
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.json && tsc -p tsconfig.node.json",
    "format:check": "prettier --check \"src/**/*\" \"tests/**/*\" \"dev/**/*\" --ignore-unknown",
    "format": "prettier --write \"src/**/*\" \"tests/**/*\" \"dev/**/*\" --ignore-unknown",
    "dev:frontend": "vite --host",
    "dev:backend": "deno -A ./dev/backend-mock.ts",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:unit": "deno test --no-check --ignore=tests/e2e tests/"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@tsconfig/svelte": "^5.0.4",
    "@types/node": "^25.0.3",
    "bits-ui": "^2.15.4",
    "hono": "^4.7.1",
    "lucide-svelte": "^0.562.0",
    "prettier": "^3.8.0",
    "prettier-plugin-svelte": "^3.3.3",
    "svelte": "^5.46.1",
    "svelte-check": "^4.1.4",
    "tslib": "^2.8.1",
    "typescript": "^5.7.3",
    "valibot": "^1.0.0-rc.3",
    "vite": "^7.3.1",
    "vite-plugin-minify": "^2.1.0"
  }
}
